<Window x:Class="edytorTekstu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:edytorTekstu"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel Margin="10">
            <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,10">
                <Button Name="btnOpenFile" Click="btnOpenFile_Click">Open file txt</Button>
                <Button x:Name="changeStyle" Click="changeStyle_Click" Content="Pochylenie "/>
                <Button x:Name="changeStyle2" Click="changeStyle2_Click" Content="Times New Roman "/>
                <Button x:Name="changeStyle3" Click="changeStyle3_Click" Content="Arial "/>
                <Button x:Name="changeStyle4" Click="changeStyle4_Click" Content="Podkreślenie "/>
                <Button x:Name="changeStyle5" Click="changeStyle5_Click" Content="Pogrubienie "/>
                <Button x:Name="changeStyle6" Click="changeStyle6_Click" Content="Kopiuj "/>
            </WrapPanel>
            <TextBox Name="txtEditor" />
        </DockPanel>
    </Grid>
</Window>
